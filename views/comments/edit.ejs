<% include ../partials/upper %>


<div class="row">
    <div class="col-12 text-center">
        <h4>Edit comment</h4>
    </div>
    <div class="offset-2 col-8 offset-sm-3 col-sm-6 offset-md-4 col-md-4">
        <div class="container">
            <form class="form-group" method="POST" action="/campgrounds/<%=campground_id%>/comments/<%= comment["_id"] %>?_method=PUT">
                <textarea class="form-control form-group" name="comment[text]" ><%= comment.text %></textarea>
                <button class="btn btn-block btn-lg btn-custom" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>


<a href="/campgrounds">Back to campgrounds list</a>

